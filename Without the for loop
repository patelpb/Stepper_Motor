/*
Controlling the Stepper Motor
  Continuous rotation (as of right now; will be modified to include
  precision once the actuatoes are created)/
 */

#include <Stepper.h>

const int stepsPerRevolution = 32;  // number of steps per revolution 

// initialize the stepper library on pins 5, 0, 4, 2. Corresponds to
//D1, D2, D3, and D4 and in order (LED on driver) 1, 2, 3, 4
Stepper myStepper(stepsPerRevolution, 5, 0, 4, 2);

void setup() {
  // set the speed at rpm:
  myStepper.setSpeed(800);
  
  pinMode(LED_BUILTIN, OUTPUT);
  // initialize the serial port:
  //Serial.begin(9600);
  
}

void loop() {
  myStepper.step(64);
}
